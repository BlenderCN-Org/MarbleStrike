//--------------------------------------------------------------------------------------
// Global variables
//--------------------------------------------------------------------------------------
float4 gDiffuseColor;

//--------------------------------------------------------------------------------------
// Output structure
//--------------------------------------------------------------------------------------
struct PS_INPUT
{
    float4 Position : SV_POSITION;
};

struct PS_OUTPUT
{
    float4 RGBColor : SV_TARGET;
};

//--------------------------------------------------------------------------------------
// Pixel shader
//--------------------------------------------------------------------------------------

PS_OUTPUT PSMain( PS_INPUT In )
{ 
    PS_OUTPUT output;
     
    output.RGBColor = gDiffuseColor;   
  
    return output;  
}