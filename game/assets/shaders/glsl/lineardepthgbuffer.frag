//--------------------------------------------------------------------------------------
// INCLUDES
//--------------------------------------------------------------------------------------
#include "glsldefines.h"

//--------------------------------------------------------------------------------------
// GLOBAL VARIABLES
//--------------------------------------------------------------------------------------
const highp float gFarClip = 100.0;

//--------------------------------------------------------------------------------------
// VARYING VARIABLES
//--------------------------------------------------------------------------------------
varying highp float4 vDepthViewSpace;

//--------------------------------------------------------------------------------------
// PIXEL SHADER
//--------------------------------------------------------------------------------------
void main()
{
	highp float normalizedViewDepth = -vDepthViewSpace.z/gFarClip;
	
    gl_FragColor = float4( normalizedViewDepth, normalizedViewDepth, normalizedViewDepth, 1.0 );
}