//--------------------------------------------------------------------------------------
// INCLUDES
//--------------------------------------------------------------------------------------
#include "glsldefines.h"

//--------------------------------------------------------------------------------------
// UNIFORM VARIABLES
//--------------------------------------------------------------------------------------
uniform sampler2D gMainTexture;
uniform sampler2D gSSAOTexture;

//--------------------------------------------------------------------------------------
// GLOBAL VARIABLES
//--------------------------------------------------------------------------------------

//--------------------------------------------------------------------------------------
// VARYING VARIABLES
//--------------------------------------------------------------------------------------
varying highp float2 vTexCoord;

//--------------------------------------------------------------------------------------
// PIXEL SHADER
//--------------------------------------------------------------------------------------
void main()
{   
	highp float4 finalColor = texture2D( gMainTexture, vTexCoord );   
	highp float4 ssaoColor = texture2D( gSSAOTexture, vTexCoord );   
	highp float3 color = finalColor.rgb * ssaoColor.r;	
	
    gl_FragColor = float4( color, 1.0 );
}