#include "glsldefines.h"

//--------------------------------------------------------------------------------------
// GLOBAL VARIABLES
//--------------------------------------------------------------------------------------

//--------------------------------------------------------------------------------------
// VARYING VARIABLES
//--------------------------------------------------------------------------------------
varying highp float3 vNormal;

//--------------------------------------------------------------------------------------
// PIXEL SHADER
//--------------------------------------------------------------------------------------
void main()
{
	highp float3 normal = vNormal;
    highp float3 normalizedNormal = ( normal + 1.0 ) * 0.5;
	
    gl_FragColor = float4( normalizedNormal, 1.0 );
}